<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTopBarOne</item>
        <item name="colorPrimaryDark">@color/colorTopBarTwo</item>
        <item name="colorAccent">@color/colorIcons</item>
    </style>

    <style name="AppThemeCard" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleToolbarRecup" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!-- Tema da toolbar do problema de login -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

</resources>

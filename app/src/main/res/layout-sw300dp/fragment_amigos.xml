<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AmigosFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backtextblack"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:src="@drawable/ic_people_perfil" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_search_conversa" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/hintSearchViewPeople"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/relativeLayoutSocial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardViewSocial"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayoutGrupos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/estilo_background_inicio"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_4sdp"
                android:padding="@dimen/_8sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewProcurarGrupos"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_67sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/background_caixa_texto"
                    android:backgroundTint="@android:color/white" />

                <Button
                    android:id="@+id/btnProcurarGrupos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/background_caixa_texto"
                    android:fontFamily="@font/allerta"
                    android:padding="@dimen/_4sdp"
                    android:text="Ver grupos públicos"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_22ssp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgViewSocialUp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@id/linearLayoutGrupos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/comunityfriendv1" />

        <Button
            android:id="@+id/btnVerComunidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgViewSocialUp"
            android:padding="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right|end"
            android:background="@drawable/estilo_background_remetente"
            android:backgroundTint="#3949AB"
            android:fontFamily="@font/allerta"
            android:text="Ver Comunidades"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtViewSubTitleSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnVerComunidades"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textSize="@dimen/_24ssp"
            android:textColor="@android:color/black"
            android:text="Encontre pessoas incríveis como você:" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtViewSubTitleSocial"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardUseCompatPadding="true">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSliderSocial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:iss_auto_cycle="false"
                app:iss_title_background="@color/corAmigosSlider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
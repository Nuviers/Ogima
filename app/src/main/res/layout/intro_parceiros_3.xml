<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE000000">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:fontFamily="@font/amaranth"
        android:gravity="start|left"
        android:text="Seu perfil principal não terá vínculos com seu perfil de parceiros"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_32ssp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView16"
        android:textColor="#00ACC1"
        android:textSize="@dimen/_14ssp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_12sdp"
        android:text="Você poderá colocar nome e foto exclusivo para esse perfil e ele poderá ser excluído ou desativado a qualquer momento sem afetar seu perfil principal." />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@id/textView28"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_centerHorizontal="true"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_menu_profile" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView25"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_8sdp"
        android:textSize="@dimen/_24ssp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="---------------------" />
</RelativeLayout>
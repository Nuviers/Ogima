<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtViewTituloFiltros"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="@dimen/_22ssp"
        android:background="@color/chip_background_color"
        android:textColor="@android:color/white"
        android:text="Filtros" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCommunityFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewTituloFiltros"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnViewFiltrarComunidade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/recyclerViewCommunityFilters"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"
        android:background="#43A047"
        android:textColor="@android:color/white"
        android:visibility="gone"
        android:text="Aplicar filtros" />
</RelativeLayout>
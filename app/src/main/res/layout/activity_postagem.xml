<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:orientation="vertical"
    tools:context=".activity.PostagemActivity"
    tools:ignore="SpeakableTextPresentCheck">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarPostagem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/estilo_background_inicio"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:text="Adicionar postagem"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintBottom_toBottomOf="@+id/toolbarPostagem"
                app:layout_constraintEnd_toEndOf="@+id/toolbarPostagem"
                app:layout_constraintStart_toEndOf="@+id/imgButtonVoltarPostagemPerfil"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgButtonVoltarPostagemPerfil"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:background="@drawable/background_caixa_texto"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="@+id/toolbarPostagem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbarPostagem"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_22sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:fontFamily="@font/adamina"
                android:gravity="start|left"
                android:paddingStart="@dimen/_18sdp"
                android:paddingLeft="@dimen/_18sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="Escolha que tipo de postagem vocÃª deseja adicionar"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_24ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarPostagem" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_22sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true"
                app:layout_constraintTop_toBottomOf="@+id/textView31" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imgBtnAddCameraPostagem"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_weight="1"
                            android:background="@drawable/estilo_background_inicio_v2"
                            android:padding="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            app:tint="@android:color/white"
                            app:srcCompat="@drawable/ic_menu_camera" />

                        <ImageButton
                            android:id="@+id/imgBtnAddGaleriaPostagem"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_weight="1"
                            android:background="@drawable/estilo_background_inicio"
                            android:padding="@dimen/_8sdp"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_galeria_postagem_vector"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imgBtnAddGifPostagem"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_140sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@drawable/estilo_background_inicio_v2"
                                android:padding="@dimen/_8sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/giphyiconlight" />

                            <ImageButton
                                android:id="@+id/imgBtnAddVideoPostagem"
                                android:layout_width="@dimen/_120sdp"
                                android:layout_height="@dimen/_158sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_weight="1"
                                android:background="@drawable/estilo_background_inicio"
                                android:padding="@dimen/_8sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/ic_video_perfil"
                                app:tint="@android:color/white" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1699CA">

    <TextView
        android:id="@+id/txtViewTextoDaily"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/incTituloPostagem"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/andada"
        android:gravity="start|left"
        android:padding="@dimen/_4sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40ssp" />

    <include layout="@layout/inc_button_excluir_postagem"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_alignRight="@id/txtViewTextoDaily"
        android:layout_alignEnd="@id/txtViewTextoDaily"
        android:layout_above="@id/include_views"/>

    <include
        android:id="@+id/include_views"
        layout="@layout/inc_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
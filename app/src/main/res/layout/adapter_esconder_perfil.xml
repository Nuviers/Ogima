<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayoutParticipantesGrupo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgViewFotoPerfilChat"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/circle"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewNomePerfilChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:fontFamily="@font/andada"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgViewFotoPerfilChat"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnEsconderPerfil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textSize="@dimen/_15ssp"
            android:visibility="gone"
            android:background="@color/chip_background_color"
            android:textColor="@android:color/white"
            android:text="Esconder" />

        <Button
            android:id="@+id/btnDesfazerEsconder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:textSize="@dimen/_15ssp"
            android:background="@color/colorFundoIconeEditar"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:text="Desmarcar" />

    </LinearLayout>

</LinearLayout>
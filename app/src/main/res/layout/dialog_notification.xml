<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_8sdp"
    android:paddingLeft="@dimen/_8sdp"
    android:paddingRight="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    android:background="@android:color/black">

    <!-- Conteúdo do PopupWindow -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="@dimen/_12sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:padding="@dimen/_12sdp">

            <TextView
                android:id="@+id/txtViewTimeNotifLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="12:37"
                android:textColor="@android:color/black"
                android:shadowColor="@android:color/black"
                android:textSize="@dimen/_12ssp"/>

            <ImageView
                android:id="@+id/imgViewUserNotifLocal"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtViewMsgNotifLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="start|left"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toEndOf="@+id/imgViewUserNotifLocal"
                android:text="Iae rafa, gostou da nova música?"
                android:textColor="#434141"
                android:fontFamily="@font/amaranth"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/txtViewNomeUserNotifLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgViewUserNotifLocal"
                android:layout_alignStart="@+id/imgViewUserNotifLocal"
                android:layout_alignEnd="@+id/imgViewUserNotifLocal"
                android:gravity="center"
                android:text="Ana Fifit"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/black"
                android:text="Ogima" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
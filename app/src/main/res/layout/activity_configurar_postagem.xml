<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.ConfigurarPostagemActivity">

    <include
        android:id="@+id/inc_toolbar_padrao"
        layout="@layout/inc_toolbar_padrao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/framePreviewPostagem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnSalvarPostagem"
        android:layout_below="@id/horizontalScrollInteresses"
        android:layout_centerHorizontal="true"
        android:visibility="gone">


        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/styledPlayerPostagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resize_mode="fit"
            app:use_controller="false" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinProgressBarExo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:SpinKit_Color="@android:color/white"
            app:SpinKit_Style="MultiplePulseRing" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewConfigPostagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSalvarPostagem"
        android:layout_below="@id/horizontalScrollInteresses"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardPreventCornerOverlap="true">

        <ImageView
            android:id="@+id/imgViewPostagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@drawable/backgroundclaroteste" />

        <ImageView
            android:id="@+id/imgViewGifNewPostagem"
            android:layout_width="@dimen/_270sdp"
            android:layout_height="@dimen/_290sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edtTextDescricaoPostagem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@id/inc_toolbar_padrao"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:ems="10"
        android:fontFamily="@font/andada"
        android:gravity="top"
        android:hint="Faça uma breve descrição sobre a sua postagem"
        android:inputType="text|textCapSentences|textMultiLine"
        android:maxLines="4"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/_14ssp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/txtViewLimiteDescricaoPostagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTextDescricaoPostagem"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|end"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:text="0/2.000"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/_14ssp" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextViewInteresses"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:hint="Digite os interesses dessa postagem"
        android:textColor="@android:color/black"
        android:textColorHint="#0389FF"
        android:background="@drawable/tooltip_background"
        android:backgroundTint="#FFFDFC"
        android:layout_below="@id/txtViewLimiteDescricaoPostagem"
        android:completionThreshold="1" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollInteresses"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/autoCompleteTextViewInteresses"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/LinearLayoutInteressesMarcados"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/btnSalvarPostagem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_mais_fotos"
        android:text="Publicar postagem"
        android:backgroundTint="#1E88E5"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15ssp" />
</RelativeLayout>
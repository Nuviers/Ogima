<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/estilo_background_inicio"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView39"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/background_button_entrar"
        android:gravity="center"
        android:text="Mudar papel de parede:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:id="@+id/txtViewDialogOnlyChat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:gravity="center"
        android:text="Somente para essa conversa"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:id="@+id/txtViewDialogAllChats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:gravity="center"
        android:text="Todas conversa"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />

</LinearLayout>
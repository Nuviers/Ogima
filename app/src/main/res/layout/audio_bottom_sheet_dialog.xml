<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#673AB7"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgButtonCancelarAudio"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/background_caixa_texto"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_input_delete"
        app:tint="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgButtonStopAudio"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/backtextblackfriends"
            app:srcCompat="@drawable/ic_stop_audio" />

        <ImageButton
            android:id="@+id/imgButtonPlayAudio"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/backtextblackfriends"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_play_audio" />

        <ImageButton
            android:id="@+id/imgButtonPauseAudio"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/backtextblackfriends"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_pause_audio" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewTempoAudio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_weight="1"
        android:background="@drawable/background_button_entrar"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_28ssp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgButtonGravarAudio"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/estilo_button_google"
        android:backgroundTint="#0073FF"
        android:scaleType="centerCrop"
        app:tint="#FFFFFF"
        app:srcCompat="@drawable/ic_record_audio" />

    <ImageButton
        android:id="@+id/imgButtonEnviarAudio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_weight="1"
        android:background="@drawable/estilo_background_inicio"
        app:srcCompat="@drawable/ic_enviar_mensagem" />
</LinearLayout>
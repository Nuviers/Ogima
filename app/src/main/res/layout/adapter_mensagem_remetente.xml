<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayoutMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:gravity="right|end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewDataTrocaMensagens"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/button_cad_redondo"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_15ssp"
            android:visibility="gone"
            app:backgroundTint="#3F52BD" />

        <TextView
            android:id="@+id/txtViewMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|right"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/estilo_background_remetente"
            android:fontFamily="@font/andada"
            android:paddingStart="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14ssp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearAudioChat"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_background_remetente"
            android:gravity="right|end"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgViewAudioChat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    app:srcCompat="@drawable/ic_audio_enviado"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/txtViewAudioChat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:gravity="left|start|center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtViewDuracaoAudioChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|end"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMusicaChat"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_background_remetente"
            android:gravity="right|end"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgViewMusicaChat"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    app:srcCompat="@drawable/ic_menu_music"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/txtViewMusicaChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:gravity="left|start|center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtViewDuracaoMusicaChat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|end"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearDocumentoChat"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:background="@drawable/estilo_background_remetente"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgViewDocumentoChat"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/ic_documento_chat"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/txtViewNomeDocumentoChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_weight="1"
                android:gravity="left|start|center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgViewMensagem"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_290sdp"
            android:background="#3F58E4"
            android:paddingStart="@dimen/_2sdp"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgViewGifMensagem"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_220sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="#3F58E4"
            android:padding="@dimen/_4sdp"
            android:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintThumbVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imgViewVideoMensagem"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_gravity="right|end"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="#3F58E4"
                android:padding="@dimen/_4sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imgButtonExpandirVideo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/background_caixa_texto"
                android:scaleType="centerCrop"
                android:tint="#3F58E4"
                app:layout_constraintBottom_toBottomOf="@+id/imgViewVideoMensagem"
                app:layout_constraintEnd_toEndOf="@+id/imgViewVideoMensagem"
                app:layout_constraintStart_toStartOf="@+id/imgViewVideoMensagem"
                app:layout_constraintTop_toTopOf="@+id/imgViewVideoMensagem"
                app:srcCompat="@drawable/ic_play_circle_outline_white_48dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtViewDataMensagem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_14sdp"
            android:layout_gravity="right|end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/background_caixa_texto"
            android:fontFamily="@font/arsenal"
            android:paddingStart="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
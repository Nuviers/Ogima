<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TesteTenorActivity">

    <ImageView
        android:id="@+id/imgViewTesteTensor"
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_450sdp"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnFotoGaleriaTensor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/backtextblackfriends"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/_17ssp"
        android:text="SELECIONAR FOTO" />
</RelativeLayout>
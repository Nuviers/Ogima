<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearTeste1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_8sdp">

    <LinearLayout
        android:id="@+id/linearTeste2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgViewFundoUserInicio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/estilo_background_branco_arredondado_lateral_esquerda_two" />

            <ImageView
                android:id="@+id/imgViewDonoFotoPostagemInicio"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:padding="@dimen/_2sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewNomeDonoPostagemInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/background_caixa_texto"
                android:clickable="true"
                android:fontFamily="@font/amaranth"
                android:paddingStart="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_22ssp"
                app:layout_constraintBottom_toTopOf="@+id/btnVisitarPerfilFotoPostagem"
                app:layout_constraintEnd_toEndOf="@+id/imgViewFundoUserInicio"
                app:layout_constraintStart_toEndOf="@+id/imgViewDonoFotoPostagemInicio"
                app:layout_constraintTop_toTopOf="@+id/imgViewFundoUserInicio" />

            <Button
                android:id="@+id/btnVisitarPerfilFotoPostagem"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/background_caixa_texto"
                android:fontFamily="@font/amaranth"
                android:text="Visitar perfil"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTeste3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewTituloFotoPostadaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/background_caixa_texto"
            android:paddingStart="@dimen/_12sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20ssp" />

        <ImageView
            android:id="@+id/imgViewFotoPostagemInicio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgViewGifPostagemInicio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBarExo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:visibility="gone" />

        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/playerViewInicio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500sdp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:resize_mode="zoom" />

        <Button
            android:id="@+id/btnExibirVideo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp"
            android:background="@android:color/white"
            android:text="Ver video"
            android:textAllCaps="false"
            android:textSize="@dimen/_18ssp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewDescricaoFotoPostagemInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:paddingStart="@dimen/_12sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="@dimen/_20ssp" />

    <LinearLayout
        android:id="@+id/linearTeste4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgButtonLikeFotoPostagemInicio"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="start|left"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_heart_postagem_v1" />

            <TextView
                android:id="@+id/txtViewContadorLikesFotoPostagemInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_4sdp"
                android:clickable="true"
                android:gravity="center_vertical|center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="@+id/imgButtonLikeFotoPostagemInicio"
                app:layout_constraintStart_toStartOf="@+id/imgButtonLikeFotoPostagemInicio"
                app:layout_constraintTop_toBottomOf="@+id/imgButtonLikeFotoPostagemInicio" />

            <ImageButton
                android:id="@+id/imgButtonComentariosFotoPostagemInicio"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:tint="@android:color/black"
                app:layout_constraintStart_toEndOf="@+id/imgButtonLikeFotoPostagemInicio"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chat_comentarios_v1" />

            <TextView
                android:id="@+id/txtViewContadorComentarioFotoPostagemInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_4sdp"
                android:clickable="true"
                android:gravity="center|center_vertical"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintEnd_toEndOf="@+id/imgButtonComentariosFotoPostagemInicio"
                app:layout_constraintStart_toStartOf="@+id/imgButtonComentariosFotoPostagemInicio"
                app:layout_constraintTop_toBottomOf="@+id/imgButtonComentariosFotoPostagemInicio" />

            <TextView
                android:id="@+id/txtViewContadorViewsFotoPostagemInicio"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_caixa_texto"
                android:clickable="true"
                android:paddingStart="@dimen/_8sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline91"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgButtonViewsFotoPostagemInicio"
                app:layout_constraintTop_toTopOf="@+id/guideline90" />

            <ImageButton
                android:id="@+id/imgButtonViewsFotoPostagemInicio"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtViewContadorViewsFotoPostagemInicio"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline90"
                app:srcCompat="@drawable/ic_views_postagens"
                app:tint="#5B83E6"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="144dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="353dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#007BFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_4sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDesbloquearViewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desbloquear"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:fontFamily="@font/amaranth"
                android:paddingRight="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20ssp" />

            <ImageButton
                android:id="@+id/imgBtnCoinsDesbloqueioViewer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="#3949AB"
                app:srcCompat="@drawable/ic_coinsteste" />

            <TextView
                android:id="@+id/txtViewCustoDesbloqueioViewer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_weight="1"
                android:background="#3949AB"
                android:gravity="start|center_vertical"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_34ssp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
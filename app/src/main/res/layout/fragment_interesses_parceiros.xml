<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.parc.InteressesParceirosFragment">

    <TextView
        android:id="@+id/txtViewTitleHobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_toStartOf="@+id/inc_fab_next_parc"
        android:fontFamily="@font/amaranth"
        android:gravity="start|left"
        android:text="Selecione seus hobbies"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:id="@+id/txtViewInfoHobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_fab_next_parc"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/txtViewNrHobbiesParc"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textSize="@dimen/_14ssp"
        android:text="Seus hobbies incríveis serão exibidos para os outros usuários." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHobbiesParc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtViewInfoHobbies"
        android:layout_margin="@dimen/_4sdp"
        android:layout_centerHorizontal="true"/>

    <include
        android:id="@+id/inc_fab_next_parc"
        layout="@layout/inc_fab_next_parc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_8sdp"/>

    <TextView
        android:id="@+id/txtViewNrHobbiesParc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inc_fab_next_parc"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="0/10" />
</RelativeLayout>
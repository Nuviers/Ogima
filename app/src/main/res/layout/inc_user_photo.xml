<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spinKitLoadPhotoUser"
        style="@style/SpinKitView.DoubleBounce"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignStart="@+id/imgViewIncPhoto"
        android:layout_alignTop="@+id/imgViewIncPhoto"
        android:layout_alignEnd="@+id/imgViewIncPhoto"
        android:layout_alignBottom="@+id/imgViewIncPhoto"
        android:background="@drawable/background_caixa_texto_redondo"
        app:SpinKit_Color="#4C4B4B"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgViewIncPhoto"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/circle"
        android:padding="@dimen/_2sdp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgBtnParticipantesComunidade"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_participantes_grupo"
            app:tint="#1E88E5" />

        <TextView
            android:id="@+id/txtViewNrParticipantesComunidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_toStartOf="@+id/btnViewEntrarComunidade"
            android:layout_toLeftOf="@+id/btnViewEntrarComunidade"
            android:layout_toEndOf="@+id/imgBtnParticipantesComunidade"
            android:layout_toRightOf="@+id/imgBtnParticipantesComunidade"
            android:fontFamily="@font/adamina"
            android:paddingStart="@dimen/_8sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_19ssp" />

        <Button
            android:id="@+id/btnViewEntrarComunidade"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/estilo_button_google"
            android:backgroundTint="#43A047"
            android:text="Participar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_17ssp" />

        <View
            android:id="@+id/view26"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_below="@+id/btnViewEntrarComunidade"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_16sdp"
            android:background="#6B000000" />

</RelativeLayout>
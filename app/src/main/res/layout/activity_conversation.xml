<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConversationActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgViewWallpaperConversa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/linearLayoutCabecalhoConversa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/background_caixa_texto"
        android:paddingTop="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnBackConversa"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/background_caixa_texto"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24"
                app:tint="#2B47E1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgViewFotoDestinatario"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtViewNomeDestinatario"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="1"
                android:background="@drawable/background_caixa_texto"
                android:fontFamily="@font/andada"
                android:paddingStart="@dimen/_4sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp"
                android:textColor="@color/amp_blue"
                android:textSize="@dimen/_18ssp" />

            <ImageButton
                android:id="@+id/imgBtnConfigsChat"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center|end"
                android:background="@drawable/background_caixa_texto"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_configs_chat"
                app:tint="#2B47E1" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMensagensChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutCabecalhoConversa"
        android:layout_above="@id/linearLayoutMsg"
        android:layout_centerHorizontal="true"/>


    <LinearLayout
        android:id="@+id/linearLayoutLigacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutCabecalhoConversa"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnVideoCall"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="start|left"
                android:background="@drawable/background_caixa_texto"
                app:srcCompat="@drawable/ic_video_chat"
                app:tint="#2B47E1"/>

            <ImageButton
                android:id="@+id/imgBtnVoiceCall"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/background_caixa_texto"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_phone_chat"
                app:tint="#2B47E1" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnStatusOnline"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/background_caixa_texto"
        android:backgroundTint="#5BFFFFFF"
        android:scaleType="center"
        android:layout_below="@+id/imgBtnSearchConversa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:srcCompat="@drawable/ps_demo_blue_num_selected"
        app:tint="#615D5F" />

    <ImageButton
        android:id="@+id/imgBtnSearchConversa"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/background_caixa_texto"
        android:scaleType="centerInside"
        android:layout_below="@id/linearLayoutCabecalhoConversa"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:tint="#2B47E1"
        android:backgroundTint="#AEAFBA"
        app:srcCompat="@drawable/ic_search_conversa" />

    <ImageButton
        android:id="@+id/imgBtnScrollFirstMsg"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:scaleType="centerInside"
        android:background="@drawable/background_caixa_texto"
        android:backgroundTint="#252424"
        android:layout_below="@id/imgBtnStatusOnline"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_rolarparaprimeiramsg"
        android:visibility="gone"/>

    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/materialSearchConversa"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_below="@id/linearLayoutCabecalhoConversa"
        android:layout_toStartOf="@id/imgBtnSearchConversa"
        android:layout_toEndOf="@id/linearLayoutLigacao"
        />


    <ImageButton
        android:id="@+id/imgBtnScrollLastMsg"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_27sdp"
        android:scaleType="centerInside"
        android:background="@drawable/background_caixa_texto"
        android:backgroundTint="#252424"
        android:layout_above="@id/imgBtnAvisoNovaMsg"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_rolarparaultimamsg" />

    <ImageButton
        android:id="@+id/imgBtnAvisoNovaMsg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_32sdp"
        android:scaleType="centerCrop"
        android:background="@drawable/background_caixa_texto"
        android:backgroundTint="#655F5F"
        android:layout_above="@id/linearLayoutMsg"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        app:tint="#FF9800"
        app:srcCompat="@drawable/ic_baseline_expand_more_24" />

    <LinearLayout
        android:id="@+id/linearLayoutMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_8sdp"
            android:background="@drawable/background_caixa_texto"
            android:backgroundTint="#3C4577"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgButtonEnviarFotoChat"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                app:tint="@android:color/white"
                app:srcCompat="@drawable/ic_add_diaria_short" />

            <EditText
                android:id="@+id/edtTextMensagemChat"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/fundo_mensagem_chat"
                android:ems="10"
                android:maxLines="4"
                android:gravity="bottom"
                android:inputType="textMultiLine"
                android:paddingStart="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp" />

            <ImageButton
                android:id="@+id/imgButtonSheetAudio"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_record_audio" />

            <ImageButton
                android:id="@+id/imgButtonEnviarMensagemChat"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@drawable/estilo_button_google"
                android:backgroundTint="#4421E3"
                android:clickable="true"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_enviar_mensagem" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
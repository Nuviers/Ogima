<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp">


    <ImageView
        android:id="@+id/imgViewFotoRecupPorEmail"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/circle"
        android:backgroundTint="#3949AB"
        android:padding="@dimen/_2sdp" />

    <ProgressBar
        android:id="@+id/progressBarRecupPorEmail"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@+id/imgViewFotoRecupPorEmail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txtViewTitleRecupPorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgViewFotoRecupPorEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/provide_your_email"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_22ssp" />

    <ImageButton
        android:id="@+id/imgBtnRecupPorEmail"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/txtViewTitleRecupPorEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_dialog_email"
        app:tint="@android:color/black" />

    <EditText
        android:id="@+id/edtTxtEmailRecup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBtnRecupPorEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/backtextblack"
        android:ems="10"
        android:hint="@string/email_linked_to_account"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/_17ssp"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnRecupContaPorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtTxtEmailRecup"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/background_mais_fotos"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:text="@string/continue_message"
        android:textAllCaps="false"
        android:textSize="@dimen/_17ssp" />

    <TextView
        android:id="@+id/txtViewMsgRecupPorEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnRecupContaPorEmail"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_8sdp"
        android:textSize="@dimen/_15ssp"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/black" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/incCabecalhoPerfil"
        layout="@layout/inc_cabecalho_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <include
        android:id="@+id/incTituloPostagem"
        layout="@layout/inc_titulo_postagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incCabecalhoPerfil"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/frameVideoPostagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/incTituloPostagem"
        android:layout_centerHorizontal="true">

        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/playerViewInicio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_470sdp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            app:resize_mode="zoom"
            app:use_controller="false"
            android:scaleType="centerCrop" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinProgressBarExo"
            app:SpinKit_Style="MultiplePulseRing"
            app:SpinKit_Color="@android:color/white"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:visibility="visible"
            android:layout_gravity="center"/>

    </FrameLayout>

    <include
        android:id="@+id/incButtonsPostagem"
        layout="@layout/buttons_postagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/frameVideoPostagem"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/incDescPostagem"
        layout="@layout/inc_descricao_postagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incButtonsPostagem"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
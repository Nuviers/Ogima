<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".activity.AddDailyShortsActivity">

    <include
        android:id="@+id/include_toolbarPadrao"
        layout="@layout/inc_toolbar_padrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtViewDailyShorts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include_toolbarPadrao"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:fontFamily="@font/andada"
        android:padding="@dimen/_8sdp"
        android:text="DailyShorts"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_24ssp" />

    <ImageView
        android:id="@+id/imgViewDailyShorts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:layout_below="@id/txtViewDailyShorts"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_preview_daily_shorts" />

    <TextView
        android:id="@+id/txtViewNrDailyShorts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardViewDailyShorts"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_22sdp"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:fontFamily="@font/andada"
        android:gravity="center"
        android:text="DailyShorts: 0/10"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_24ssp" />

    <FrameLayout
        android:id="@+id/framePreviewDaily"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:layout_above="@id/txtViewNrDailyShorts"
        android:layout_below="@id/txtViewDailyShorts"
        android:layout_centerHorizontal="true"
        android:visibility="gone">


        <com.google.android.exoplayer2.ui.StyledPlayerView
            android:id="@+id/styledPlayerPreviewDaily"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            app:resize_mode="fit"
            app:use_controller="true" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinProgressBarExo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:SpinKit_Color="@android:color/white"
            app:SpinKit_Style="MultiplePulseRing" />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRedondoDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtViewNrDailyShorts"
        android:layout_below="@id/txtViewDailyShorts"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardUseCompatPadding="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDailyShortsSelecao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_320sdp"
            android:layout_above="@id/txtViewNrDailyShorts"
            android:layout_below="@id/txtViewDailyShorts"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDailyShorts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_above="@+id/btnSalvarDailyShorts"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardBackgroundColor="#514F4B"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        app:elevation="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnAddGaleriaDaily"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_galeria_postagem_vector"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/imgBtnAddGifDaily"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/giphyiconlight" />

            <ImageButton
                android:id="@+id/imgBtnAddVideoDaily"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_video_perfil"
                app:tint="@android:color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSalvarDailyShorts"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/estilo_button_google"
        android:backgroundTint="@android:color/holo_blue_light"
        android:padding="@dimen/_8sdp"
        android:text="Salvar DailyShorts"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_22ssp" />

</RelativeLayout>
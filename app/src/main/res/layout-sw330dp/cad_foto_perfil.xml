<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373E60">

    <include
        android:id="@+id/inc_fab_back"
        layout="@layout/inc_fab_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtViewTitleFotoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_caixa_texto"
        android:padding="@dimen/_2sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_toRightOf="@id/inc_fab_back"
        android:layout_toEndOf="@+id/inc_fab_back"
        android:gravity="center"
        android:text="Selecione sua foto de perfil:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />

    <ImageView
        android:id="@+id/imgViewCadFotoUser"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_below="@id/txtViewTitleFotoPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/circle"
        android:backgroundTint="@android:color/black"
        android:padding="@dimen/_2sdp" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBarCadFotoUser"
        style="@style/SpinKitView.DoubleBounce"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignStart="@+id/imgViewCadFotoUser"
        android:layout_alignTop="@+id/imgViewCadFotoUser"
        android:layout_alignEnd="@+id/imgViewCadFotoUser"
        android:layout_alignBottom="@+id/imgViewCadFotoUser"
        android:background="@android:color/transparent"
        android:padding="@dimen/_50sdp"
        android:visibility="gone" />

    <View
        android:id="@+id/viewBackgroundCadFotoOne"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_below="@id/txtViewTitleFotoPerfil"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/background_button_entrar"
        android:padding="@dimen/_8sdp" />

    <ImageButton
        android:id="@+id/imgBtnCadGaleria"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignTop="@id/viewBackgroundCadFotoOne"
        android:layout_alignStart="@id/viewBackgroundCadFotoOne"
        android:layout_alignLeft="@id/viewBackgroundCadFotoOne"
        android:layout_alignRight="@id/viewBackgroundCadFotoOne"
        android:layout_alignEnd="@+id/viewBackgroundCadFotoOne"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_galeria_postagem_vector" />

    <ImageButton
        android:id="@+id/imgBtnCadCamera"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@id/imgBtnCadGaleria"
        android:layout_alignStart="@id/viewBackgroundCadFotoOne"
        android:layout_alignLeft="@id/viewBackgroundCadFotoOne"
        android:layout_alignRight="@id/viewBackgroundCadFotoOne"
        android:layout_alignEnd="@+id/viewBackgroundCadFotoOne"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp" />

    <ImageButton
        android:id="@+id/imgBtnCadGif"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/imgBtnCadCamera"
        android:layout_alignStart="@id/viewBackgroundCadFotoOne"
        android:layout_alignLeft="@id/viewBackgroundCadFotoOne"
        android:layout_alignRight="@id/viewBackgroundCadFotoOne"
        android:layout_alignEnd="@+id/viewBackgroundCadFotoOne"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/giphyiconlight" />

    <ImageButton
        android:id="@+id/imgBtnDeleteFotoUser"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@+id/imgViewCadFotoUser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button_entrar"
        android:backgroundTint="#A82121"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_delete_dado" />

    <TextView
        android:id="@+id/txtViewTitleFundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBtnDeleteFotoUser"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:text="Selecione seu fundo de perfil:"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp" />

    <ImageView
        android:id="@+id/imgViewCadFundoUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_215sdp"
        android:layout_below="@id/txtViewTitleFundo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_12sdp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/placeholderuniverse" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBarCadFundoUser"
        style="@style/SpinKitView.DoubleBounce"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignStart="@+id/imgViewCadFundoUser"
        android:layout_alignTop="@+id/imgViewCadFundoUser"
        android:layout_alignEnd="@+id/imgViewCadFundoUser"
        android:layout_alignBottom="@+id/imgViewCadFundoUser"
        android:background="@android:color/transparent"
        android:padding="@dimen/_120sdp"
        android:visibility="gone" />

    <View
        android:id="@+id/viewBackgroundCadFundo"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignBottom="@id/imgViewCadFundoUser"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button_entrar" />

    <ImageButton
        android:id="@+id/imgBtnCadGaleriaFundo"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignTop="@id/viewBackgroundCadFundo"
        android:layout_alignStart="@id/viewBackgroundCadFundo"
        android:layout_alignLeft="@id/viewBackgroundCadFundo"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_galeria_postagem_vector" />

    <ImageButton
        android:id="@+id/imgBtnCadCameraFundo"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignTop="@id/viewBackgroundCadFundo"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toEndOf="@+id/imgBtnCadGaleriaFundo"
        android:layout_toRightOf="@+id/imgBtnCadGaleriaFundo"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_photo_camera_white_24dp" />

    <ImageButton
        android:id="@+id/imgBtnCadGifFundo"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignTop="@id/viewBackgroundCadFundo"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toEndOf="@+id/imgBtnCadCameraFundo"
        android:layout_toRightOf="@+id/imgBtnCadCameraFundo"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/giphyiconlight" />

    <ImageButton
        android:id="@+id/imgBtnDeleteFundoUser"
        android:layout_width="@dimen/_38sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignBottom="@+id/imgViewCadFundoUser"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/background_button_entrar"
        android:backgroundTint="#A82121"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_delete_dado" />

    <Button
        android:id="@+id/btnContinuarCadFoto"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_cad_redondo"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textSize="@dimen/_15ssp" />
</RelativeLayout>
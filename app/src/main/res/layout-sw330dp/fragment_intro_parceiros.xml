<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE000000">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_32ssp"
        android:fontFamily="@font/amaranth"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_14sdp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:gravity="start|left"
        android:text="Seja bem-vindo, encontre seu parceiro(a) ideal. " />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:paddingTop="@dimen/_50sdp"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_like_postagem_cheio" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/imageView13"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/_50sdp"
        android:scaleType="centerCrop"
        app:tint="@android:color/white"
        app:srcCompat="@drawable/ic_baseline_join_full_24" />

</RelativeLayout>
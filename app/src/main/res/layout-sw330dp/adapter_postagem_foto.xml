<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_520sdp"
    android:background="@android:color/black">

    <include
        android:id="@+id/incCabecalhoPerfil"
        layout="@layout/inc_cabecalho_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <include
        android:id="@+id/incTituloPostagem"
        layout="@layout/inc_titulo_postagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/incCabecalhoPerfil"
        android:layout_centerHorizontal="true" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgViewFotoPostagem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_470sdp"
        app:riv_corner_radius="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_below="@id/incCabecalhoPerfil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_2sdp" />

    <include layout="@layout/inc_button_excluir_postagem"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_alignRight="@id/imgViewFotoPostagem"
        android:layout_alignEnd="@id/imgViewFotoPostagem"
        android:layout_alignTop="@id/imgViewFotoPostagem"/>

    <include
        android:id="@+id/incButtonsPostagem"
        layout="@layout/buttons_postagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgViewFotoPostagem"
        android:layout_alignStart="@id/imgViewFotoPostagem"
        android:layout_alignLeft="@id/imgViewFotoPostagem"/>

    <include
        android:id="@+id/incDescPostagem"
        layout="@layout/inc_descricao_postagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:layout_above="@id/incButtonsPostagem"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
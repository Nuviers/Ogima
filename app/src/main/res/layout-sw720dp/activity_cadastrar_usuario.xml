<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_login_email">

    <ImageView
        android:id="@+id/imgViewLogoCad"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fundoogima" />

    <TextView
        android:id="@+id/txtViewTitleCadEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgViewLogoCad"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:text="@string/create_account"
        android:textSize="@dimen/_24ssp"
        android:textColor="@android:color/black"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edtTxtCadEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/txtViewTitleCadEmail"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:gravity="center|start"
        android:hint="@string/email"
        android:fontFamily="@font/andada"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/black"
        android:textColorHint="#B2000000"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtTxtCadPass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/edtTxtCadEmail"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:gravity="center|start"
        android:hint="@string/password"
        android:fontFamily="@font/andada"
        android:textSize="@dimen/_20ssp"
        android:padding="@dimen/_8sdp"
        android:textColor="@android:color/black"
        android:textColorHint="#B2000000"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnCadastrarEmail"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/edtTxtCadPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/background_button_entrar"
        android:backgroundTint="#264ECA"
        android:text="@string/sign_up"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/txtViewAccountProblemCad"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCadastrarEmail"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/transparent"
        android:padding="@dimen/_8sdp"
        android:text="@string/account_problem"
        android:textColor="#E91E63"
        android:textSize="@dimen/_17ssp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnCadWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/estilo_button_google"
        android:drawableLeft="@drawable/icongoogle"
        android:drawablePadding="-68dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingLeft="40dp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="@string/register_with_google"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp" />

    <ProgressBar
        android:id="@+id/progressBarCadEmail"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_below="@id/edtTxtCadPass"
        android:layout_toRightOf="@+id/btnCadastrarEmail"
        android:layout_toEndOf="@+id/btnCadastrarEmail"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:background="@drawable/background_caixa_texto"
        android:visibility="gone"/>

</RelativeLayout>
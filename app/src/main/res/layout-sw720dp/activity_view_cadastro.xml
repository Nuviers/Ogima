<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_login_email">


    <ImageView
        android:id="@+id/imgViewCad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_325sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/womancadview" />

    <TextView
        android:id="@+id/txtViewDescCad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgViewCad"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_24ssp"
        android:padding="@dimen/_4sdp"
        android:gravity="center"
        android:text="@string/desc_ui_login"
        android:textColor="@android:color/white"
        android:background="@drawable/background_caixa_texto"
        android:fontFamily="@font/arsenal"/>

    <Button
        android:id="@+id/btnCadEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewDescCad"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/estilo_button_telefone"
        android:paddingTop="@dimen/_17sdp"
        android:paddingBottom="@dimen/_17sdp"
        android:text="@string/register_with_email"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnCadGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCadEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:background="@drawable/estilo_button_google"
        android:drawableLeft="@drawable/icongoogle"
        android:drawablePadding="-68dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingLeft="40dp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="@string/register_with_google"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp" />

    <TextView
        android:id="@+id/txtViewPossuiConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCadGoogle"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_centerHorizontal="true"
        android:textColor="#00FF00"
        android:textSize="@dimen/_18ssp"
        android:text="@string/have_an_account" />

    <ProgressBar
        android:id="@+id/progressBarCadGoogle"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignBottom="@id/imgViewCad"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_4sdp"
        android:background="@drawable/background_caixa_texto"
        android:visibility="gone" />
</RelativeLayout>
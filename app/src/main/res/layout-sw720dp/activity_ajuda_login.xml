<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inc_toolbar_padrao"
        layout="@layout/inc_toolbar_padrao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/smartTabProblem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/inc_toolbar_padrao"
        android:layout_centerHorizontal="true"
        app:stl_clickable="true"
        android:background="#000000"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#FFF"
        app:stl_defaultTabTextHorizontalPadding="@dimen/_16sdp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_defaultTabTextSize="@dimen/_12ssp"
        app:stl_distributeEvenly="true"
        app:stl_dividerColor="@android:color/transparent"
        app:stl_dividerThickness="@dimen/_1sdp"
        app:stl_drawDecorationAfterTab="false"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorColor="#3949AB"
        app:stl_indicatorCornerRadius="@dimen/_2sdp"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInFront="false"
        app:stl_indicatorInterpolation="smart"
        app:stl_indicatorThickness="@dimen/_4sdp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorWithoutPadding="false"
        app:stl_overlineColor="#4D000000"
        app:stl_overlineThickness="0dp"
        app:stl_titleOffset="@dimen/_24sdp"
        app:stl_underlineColor="#4D000000"
        app:stl_underlineThickness="@dimen/_1sdp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerProblem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_below="@id/smartTabProblem"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonFaq"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerProblem"
        android:layout_centerHorizontal="true"
        android:background="@drawable/backtextblack"
        android:text="@string/login_problem_information"
        android:textColor="#053BFF"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>